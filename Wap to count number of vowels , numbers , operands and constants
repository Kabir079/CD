count_vowels = 0
count_consonants = 0
count_numbers = 0
count_operands = 0

variable = input("Enter the input :")
vowels = "AEIOUaeiou"
numbers = "1234567890"
operands = "+-?*"
for i in variable:
    if i in vowels:
        count_vowels += 1
    elif i in numbers:
      count_numbers += 1
    elif i in operands:
      count_operands +=1
    else:
      count_consonants += 1
      

print("Number of vowels are :",count_vowels)
print("Number of consonants are :",count_consonants)
print("Number of numbers are :",count_numbers)
print("Number of operands are :", count_operands)
